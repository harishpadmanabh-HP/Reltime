<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:fillViewport="true"
    tools:context=".activity.kyc.KYCVerificationProgressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/dp200"
            android:layout_height="@dimen/dp200"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp100"
            android:src="@drawable/verification_layerimage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_welcome_label"
            style="@style/BoldTextViewHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp65"
            android:layout_marginTop="@dimen/dp30"
            android:layout_marginEnd="@dimen/dp65"
            android:gravity="center"
            android:text="@string/kycve_progress_label"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_logo" />

        <TextView
            style="@style/BasicTextViewSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp50"
            android:layout_marginTop="@dimen/dp22"
            android:layout_marginEnd="@dimen/dp50"
            android:gravity="center"
            android:text="@string/kycve_progress_desc" />

        <Button
            android:id="@+id/bt_finish"
            style="@style/BoldButtonHigh"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp30"
            android:layout_marginTop="@dimen/dp35"
            android:layout_marginEnd="@dimen/dp30"
            android:text="@string/kycve_finish_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_welcome_label" />


    </LinearLayout>
</ScrollView>