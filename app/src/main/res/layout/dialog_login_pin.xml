<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp5"
    android:background="@drawable/basic_corner"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp16"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="@string/create_login_pin"
        android:textColor="@color/white"
        android:textSize="@dimen/sp18" />
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/tvPin"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp50"
        android:layout_marginStart="@dimen/dp12"
        android:layout_marginTop="@dimen/dp12"
        android:layout_marginEnd="@dimen/dp12"
        android:background="@color/round_gradient_base"
        android:fontFamily="@font/inter_regular"
        android:hint="@string/login_pin"
        android:inputType="numberPassword"
        android:maxLength="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="@dimen/dp12"
        android:paddingEnd="@dimen/dp12"
        android:textColor="@color/white"
        android:textColorHint="@color/white60"
        android:textSize="@dimen/sp14" />
    <ImageView
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        app:layout_constraintTop_toTopOf="@+id/tvPin"
        app:layout_constraintBottom_toBottomOf="@+id/tvPin"
        app:layout_constraintEnd_toEndOf="@+id/tvPin"
        android:id="@+id/ivPin"
        android:background="@android:color/transparent"
        android:src="@drawable/password_toggle_eye_close"
        android:layout_marginEnd="@dimen/dp16"
        />

</androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/tvConfirmPin"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:layout_marginStart="@dimen/dp12"
            android:layout_marginTop="@dimen/dp12"
            android:layout_marginEnd="@dimen/dp12"
            android:background="@color/round_gradient_base"
            android:fontFamily="@font/inter_regular"
            android:hint="@string/confirm_login_pin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:paddingStart="@dimen/dp12"
            android:paddingEnd="@dimen/dp12"
            android:textColor="@color/white"
            android:textColorHint="@color/white60"
            android:textSize="@dimen/sp14" />
        <ImageView
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            app:layout_constraintTop_toTopOf="@+id/tvConfirmPin"
            app:layout_constraintBottom_toBottomOf="@+id/tvConfirmPin"
            app:layout_constraintEnd_toEndOf="@+id/tvConfirmPin"
            android:id="@+id/ivConfirmPin"
            android:background="@android:color/transparent"
            android:src="@drawable/password_toggle_eye_close"
            android:layout_marginEnd="@dimen/dp16"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginTop="@dimen/dp24"
        android:background="@color/white20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp12"
            android:text="@string/cancel"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp18" />

        <View
            android:layout_width="@dimen/dp1"
            android:layout_height="match_parent"
            android:background="@color/white20" />

        <TextView
            android:id="@+id/btnYes"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp50"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp12"
            android:text="@string/set_pin"
            android:textColor="@color/blue"
            android:textSize="@dimen/sp18" />

    </LinearLayout>


</LinearLayout>