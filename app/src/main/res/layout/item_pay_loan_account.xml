<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp10">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add_joint" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAccountName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:text="testdskjfhksjdhf"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14"
        app:fontFamily="@font/inter_semibold"
        app:layout_constraintEnd_toStartOf="@+id/ivRadio"
        app:layout_constraintStart_toEndOf="@+id/ivIcon"
        app:layout_constraintTop_toTopOf="@+id/ivIcon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance:"
        android:textColor="#99F9F9F9"
        android:textSize="@dimen/sp12"
        app:fontFamily="@font/inter_medium"
        app:layout_constraintStart_toStartOf="@+id/tvAccountName"
        app:layout_constraintTop_toBottomOf="@+id/tvAccountName" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBalanceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance:"
        android:layout_marginStart="@dimen/dp4"
        android:textColor="#E5F9F9F9"
        android:textSize="@dimen/sp14"
        app:fontFamily="@font/inter_medium"
        app:layout_constraintTop_toTopOf="@+id/tvBalance"
        app:layout_constraintStart_toEndOf="@+id/tvBalance"/>

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/ivRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:buttonTint="#7CA8E2"
        android:layout_marginEnd="@dimen/dp17"/>
</androidx.constraintlayout.widget.ConstraintLayout>