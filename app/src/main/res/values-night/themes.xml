<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reltime" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BoldTextViewHigh" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/dp19
        </item><!--        <item name="android:textSize">@dimen/sp24</item>-->
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LightTextView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:fontFamily">@font/inter_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BoldTextViewTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="lineHeight">@dimen/dp30</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="BasicTextView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/dp12</item>
        <item name="android:fontFamily">@font/inter_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BasicTextViewSmall" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/inter_light</item>
        <item name="android:textColor">@color/white60</item>
        <item name="android:textSize">@dimen/dp15</item>
    </style>

    <style name="MediumTextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp15</item>
    </style>

    <style name="LargeTextView" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/app_light_blue</item>
        <item name="android:textSize">@dimen/dp18</item>
    </style>

    <style name="SettingsPrimaryTextView" parent="MediumTextView">
        <item name="android:layout_marginStart">@dimen/dp5</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SettingsSecondaryTextView" parent="BasicTextViewSmall">
        <item name="android:layout_marginStart">@dimen/dp5</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SettingsProfilePrimaryTextView" parent="MediumTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/dp13</item>
        <item name="android:gravity">end</item>

    </style>

    <style name="SettingsFAQPrimaryTextView" parent="LightTextView">
        <item name="android:ellipsize">end</item>
        <item name="android:paddingStart">@dimen/dp10</item>
        <item name="android:paddingEnd">@dimen/dp10</item>
        <item name="android:paddingTop">@dimen/dp5</item>
        <item name="android:paddingBottom">@dimen/dp5</item>
        <item name="android:background">@drawable/basic_corner</item>
        <item name="android:layout_marginEnd">@dimen/dp12</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SettingsProfileSecondaryTextView" parent="BasicTextViewSmall">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/dp13</item>
    </style>

    <style name="BoldButtonHigh" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/dp50</item>
        <item name="android:textSize">@dimen/dp14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:background">@drawable/button_blue_drawable</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/white60</item>
    </style>

    <style name="errorText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/inter_light</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="EditTextDefault" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginStart">@dimen/dp16</item>
        <item name="android:layout_marginEnd">@dimen/dp16</item>
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/dp50</item>
        <item name="android:background">@drawable/basic_corner</item>
        <item name="android:textColor">@color/white80</item>
        <item name="android:paddingStart">@dimen/dp10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="SettingsEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginStart">@dimen/dp16</item>
        <item name="android:layout_marginEnd">@dimen/dp16</item>
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/dp50</item>
        <item name="android:background">@drawable/basic_corner</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/dp10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>


    <style name="SpinnerPopUpTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:backgroundTint">@color/app_gray</item>
    </style>

    <style name="HeadingText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/dp18
        </item><!--<item name="android:textSize">18sp</item>-->
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/whitepure</item>
    </style>

    <style name="LightText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_light</item>
        <item name="android:textColor">@color/white80</item>
    </style>

    <style name="OtpText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/white80</item>
    </style>

    <style name="nameText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textColor">@color/F160</item>
    </style>

    <style name="buttonHigh" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/dp14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="EditTextDefaultSignup" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginStart">@dimen/dp16</item>
        <item name="android:layout_marginEnd">@dimen/dp16</item>
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/dp0</item>
        <item name="android:background">@drawable/basic_corner</item>
        <item name="android:textColor">@color/white80</item>
        <item name="android:paddingStart">@dimen/dp10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="EditTextLoan" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginStart">@dimen/dp16</item>
        <item name="android:layout_marginEnd">@dimen/dp16</item>
        <item name="android:layout_width">@dimen/dp0</item>
        <item name="android:layout_height">@dimen/dp50</item>
        <item name="android:background">@drawable/basic_corner</item>
        <item name="android:textColor">@color/white80</item>
        <item name="android:paddingStart">@dimen/dp10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/app_light_blue</item>
        <item name="android:textColor">@color/app_light_blue</item>
        <item name="colorOnPrimary">@color/grey50</item>
        <item name="colorOnSurface">@color/app_light_blue</item>
    </style>

    <style name="DatePickerTheme.ButtonBarNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.RoundImageStyle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThemeOverlay.Reltime.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
    <style name="Lend_Detail_TextLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white80</item>
    </style>
</resources>